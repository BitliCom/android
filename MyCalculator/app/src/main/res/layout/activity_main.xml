    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plus"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:onClick="Topla_Clk"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/eksi"
        android:layout_alignTop="@+id/plus"
        android:layout_alignEnd="@+id/editText2"
        android:onClick="Cikart_Clk"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/carp"
        android:layout_below="@+id/plus"
        android:layout_alignParentStart="true"
        android:onClick="Carp_Clk"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/bol"
        android:layout_below="@+id/eksi"
        android:layout_alignStart="@+id/eksi"
        android:onClick="Bol_Clk"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit99Text4"
        android:text="Ikinci Rakam"
        android:layout_above="@+id/plus"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:text="Ilk Rakam"
        android:layout_above="@+id/editText2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:text="SonuÃ§"
        android:layout_alignEnd="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bol" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonuc"
        android:id="@+id/textView1"
        android:layout_alignTop="@+id/editText6"
        android:layout_alignEnd="@+id/bol"
        android:layout_alignBottom="@+id/editText6" />
</RelativeLayout>
